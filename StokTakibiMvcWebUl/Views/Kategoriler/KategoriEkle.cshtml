
@model StokTakibiEntities.Concrete.Kategoriler
@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>Kategori Ekle</h4>
<br />
<form method="post">
    <br />
    <br />
    <br />
    @Html.ValidationSummary(false, null, new { @style = "color: red" })
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.KategoriAdi, "", new { @style = "color:red" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>


